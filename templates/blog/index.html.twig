{% extends 'base.html.twig' %}

{% block title %}inicio - Blog{% endblock %}

{% block body %}
<div class="example-wrapper">

    <main>
        {% if posts %}
            {% if posts[0]  %}
                <div class='w-full px-5 lg:px-10 pt-5 grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-5'>
                    {% for post in posts  %}
                        <div>
                            <h3>{{ post.title }}</h3>
                            <h3>{{ post.content }}</h3>
                            <a href="{{ path('app_blog_one', {'id': post.id}) }}">ir</a>
                        </div>
                    {% endfor %}
                </div>
            {% else %}
                <h3>
                    No existen publicaciones
                </h3>
            {% endif %}
        {% else %}
            <h3>
                No hay publicaciones
            </h3>
        {% endif %}
    </main>

</div>
{% endblock %}
