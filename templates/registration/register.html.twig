{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}

<div class='md:flex justify-center'>
    <div class='max-w-full flex-row justify-center flex mb-8 md:mr-2'>
        <form method='POST' class="w-full lg:w-[500px] bg-white rounded-xl shadow-xl">

            <div class='w-full gap-5 grid mx-auto mt-5 p-4 rounded-xl'>
                <h1 class='text-center text-3xl font-bold'>
                    ¡Registrate!
                </h1>

                {{ form_errors(registrationForm) }}

                {{ form_start(registrationForm) }}
                <section class='grid gap-3'>
                    <div class='grid'>
                        <label>Correo Electrónico</label>
                        {{ form_row(registrationForm.email) }}
                    </div>

                    <div class='grid'>
                        <label>nombre de usuario</label>
                        {{ form_row(registrationForm.username) }}
                    </div>

                    <div class='grid'>
                        <label>contraseña</label>
                        {{ form_row(registrationForm.plainPassword) }}
                    </div>

                    <div class='flex justify-start items-center gap-5'>
                        <label class='text-sm'>Aceptar terminos y condiciones</label>
                        {{ form_row(registrationForm.agreeTerms) }}
                    </div>
                </section>

                {{ form_end(registrationForm) }}

                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}" />

                <button type="subtmi" class="bg-green-800 hover:bg-green-700 rounded-md py-3 font-bold text-white">
                    regristrate
                </button>
            </div>

        </form>    
    </div>
</div>
{% endblock %}
