{% extends 'base.html.twig' %}

{% block title %}iniciar sesión - Blog{% endblock %}

{% block body %}

<div class='md:flex justify-center'>
    <div class='max-w-full flex-row justify-center flex mb-8 md:mr-2'>
        <form method='POST' class="w-full lg:w-[500px] bg-white rounded-xl shadow-xl">
            
            {% if error %}
                <div class='alert alert-danger'>
                    {{ error.messageKey|trans(error.messageData, 'security') }}
                </div>
            {% endif %}

            {% if error %}
                <div class='mb-3'>
                    ya tienes una sesión {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}"></a>
                </div>
            {% endif %}

            <div class='w-full gap-5 grid mx-auto mt-5 p-4 rounded-xl'>
                <h1 class='text-center'>
                    Inicia Sesión
                </h1>

                <div class="grid">
                    <label for="loginInputEmail" class="text-lg font-light text-gray-800">Correo Electrónico</label>
                    <input 
                        type="email"
                        placeholder="micorreo01@gmail.com" 
                        class="border w-full outline-none text-md font-gray-900 p-3 rounded-md" 
                        value="{{ last_username }}" 
                        name="email" 
                        id="loginInputEmail"
                        />
                </div>

                <div class="grid">
                    <label for="loginInputPassword" class="text-lg font-light text-gray-800">Contraseña</label>
                    <input 
                        type="password"
                        placeholder="**************" 
                        class="border w-full outline-none text-md font-gray-900 p-3 rounded-md" 
                        value="{{ last_username }}" 
                        name="password" 
                        autocomplete="current-password" 
                        id="loginInputPassword"
                        />
                </div>

                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}" />

                <button type="subtmi" class="bg-green-800 hover:bg-green-700 rounded-md py-3 font-bold text-white">
                    entrar
                </button>
            </div>

        </form>    
    </div>
</div>

{% endblock %}
